<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="DigitalStudentTicket.AppShell"
       xmlns:local="clr-namespace:DigitalStudentTicket"
       xmlns:studentViews="clr-namespace:DigitalStudentTicket.Views.StudentsViews"
       xmlns:views="clr-namespace:DigitalStudentTicket.Views"
       Visual="Material" >

    <ShellContent Title="Вход" Route="loginPage" ContentTemplate="{DataTemplate views:LoginPageView}"/>
    <ShellContent Title="Расписание" Route="shedulePage" ContentTemplate="{DataTemplate local:MainPage}"/>
    <ShellContent Title="База" Route="dbTables" ContentTemplate="{DataTemplate views:DbTablesView}"/>
    <ShellContent Title="Студент" Route="studentsMainPage" ContentTemplate="{DataTemplate  studentViews:StudentMainPage}"/>
    <ShellContent Title="Сайт" Route="SitePage" ContentTemplate="{DataTemplate  views:WebView}"/>
    <ShellContent Title="Основные страницы"
                  Route="StartPage"
                  ContentTemplate="{DataTemplate views:StartPage}" />

</Shell>